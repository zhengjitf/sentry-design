{
  "name": "sentry-javascript",
  "version": "7.0.0-alpha",
  "description": "Official Sentry JavaScript SDK",
  "repository": "https://github.com/getsentry/sentry-javascript",
  "author": "Sentry",
  "license": "BSD-3-Clause",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:es5": "lerna run build:es5",
    "build:esm": "lerna run build:esm",
    "build:watch": "lerna run build:watch",
    "clean": "lerna run clean && lerna clean --yes",
    "fix": "lerna run --parallel fix",
    "link:yarn": "lerna run --parallel link:yarn",
    "lint": "lerna run --parallel lint",
    "test": "lerna run --parallel test",
    "codecov": "codecov",
    "pack:changed": "lerna run pack --since",
    "postpublish": "make publish-docs"
  },
  "volta": {
    "node": "14.15.5",
    "yarn": "1.22.10"
  },
  "devDependencies": {
    "@google-cloud/storage": "^5.7.0",
    "@size-limit/preset-small-lib": "^4.5.5",
    "@strictsoftware/typedoc-plugin-monorepo": "^0.3.1",
    "@types/chai": "^4.1.3",
    "@types/jest": "^24.0.11",
    "@types/mocha": "^5.2.0",
    "@types/node": "~10.17.0",
    "@types/sinon": "^7.0.11",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "chai": "^4.1.2",
    "codecov": "^3.6.5",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-deprecation": "^1.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^32.0.1",
    "husky": "^5.0.9",
    "jest": "26.6.3",
    "karma-browserstack-launcher": "^1.5.1",
    "karma-firefox-launcher": "^1.1.0",
    "lerna": "4.0.0",
    "lint-staged": "^10.5.4",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "replace-in-file": "^4.0.0",
    "rimraf": "^3.0.2",
    "sinon": "^7.3.2",
    "size-limit": "^4.5.5",
    "ts-jest": "26.5.1",
    "tslib": "2.1.0",
    "typedoc": "^0.18.0",
    "typescript": "4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": "prettier --write"
  }
}
